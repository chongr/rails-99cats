  <% @cat ||= Cat.new %>
  <form action= <%= @cat.persisted? ? cat_url(@cat)  : cats_url  %> method = "post" >
    <!-- <% if @cat.persisted? %>
      <input name= />
    <% end %> -->
  <<%= @cat.persisted? ? 'input type=hidden name=_method value=PATCH' : 'br' %>>
  <br>
  <label for="cat[name]">Name:</label>
  <input type="text" name="cat[name]" value="<%= @cat.name %>"/>
  <br>
  <label for="cat[birth_date]">Birth Date:</label>
  <input type="date" name="cat[birth_date]" value="<%= @cat.birth_date %>"/>
  <br>
  <label for="cat[color]">color:</label>
  <select name="cat[color]">
    <% Cat::COLORS.each do |color| %>
      <option value='<%= color %>' <%= @cat.color == color ? 'selected' : '' %>><%= color %></option>
    <% end %>
  </select>
  <br>
  <label for="cat[sex]">Sex:</label>
  <% ["M", "F"].each do |gender| %>
    <input type="radio" name="cat[sex]" value=<%= gender %> <%= @cat.sex == gender ? 'checked' : '' %>><%= gender %><br>
  <% end %>
  <br>
  <label for="cat[description]">Description:</label>
  <input type="textarea" name="cat[description]" value="<%= @cat.description %>"/>
  <br>
  <input type="submit" value="EDIT MY CAT!!!!"/>
</form>
